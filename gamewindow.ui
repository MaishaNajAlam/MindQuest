/* Style for radio buttons */
QRadioButton {
    font-size: 14pt; /* Bigger text */
    color: rgb(50, 30, 100);
    spacing: 10px;
}

/* Make radio button indicator (circle) larger */
QRadioButton::indicator {
    width: 20px;  /* Adjust width */
    height: 20px; /* Adjust height */
    border-radius: 10px; /* Ensures a perfect circle */
    border: 2px solid rgb(120, 100, 200); /* Purple border */
    background-color: white;
}

/* When hovered */
QRadioButton::indicator:hover {
    border: 2px solid rgb(140, 120, 220);
}


QRadioButton::indicator:checked {
    background-color: rgb(120, 100, 200); /* Purple fill */
    border: 2px solid rgb(80, 60, 160);
}

/* Hover effect for radio buttons */
QRadioButton:hover {
    color: rgb(80, 60, 160);
}


