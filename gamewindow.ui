QPushButton {
    background-color: rgb(120, 100, 200); /* Purple */
    color: white;
    font-size: 12pt;
    font-weight: bold;
    border: 2px solid rgb(90, 80, 160);
    border-radius: 8px;
    padding: 6px;
}

/* Hover effect for buttons */
QPushButton:hover {
    background-color: rgb(140, 120, 220); /* Lighter purple */
}

/* Pressed effect for buttons */
QPushButton:pressed {
    background-color: rgb(100, 80, 180); /* Darker purple */
    border: 2px solid rgb(80, 70, 150);
}

/* Style for progress bar */
QProgressBar {
    border: 2px solid rgb(90, 80, 160);
    border-radius: 5px;
    background-color: rgb(220, 220, 255);
    text-align: center;
    color: rgb(50, 30, 100);
}

/* Progress bar chunk (fill) */
QProgressBar::chunk {
    background-color: rgb(120, 100, 200);
    border-radius: 5px;
